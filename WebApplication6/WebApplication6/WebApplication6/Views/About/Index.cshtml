@{
    ViewBag.Title = "About Us";
}
<br/>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>About Us</h2>
            <p>We are passionate about delivering healthy and delicious food.</p>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#aboutModal">
                Learn More
            </button>
        </div>
    </div>
</div>

<!-- Modal Structure -->
<div class="modal fade" id="aboutModal" tabindex="-1" role="dialog" aria-labelledby="aboutModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="aboutModalLabel">About Our Journey</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Welcome to our food Haven! Our mission is to provide healthy and delicious meals to our customers.
                    We started with a simple goal: to bring fresh, high-quality ingredients together to create flavorful
                    and nutritious meals that everyone can enjoy.
                </p>
                <p>
                    From farm to table, we ensure that our food is ethically sourced and prepared with care. We invite
                    you to explore our menu and discover the joy of eating wholesome, satisfying meals.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
